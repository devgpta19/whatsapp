<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />
  <title>MiniWhatsApp</title>

  <style>
    * {
      font-family: 'Gilroy';
      padding: 0;
      margin: 0;
      color: aliceblue;
    }

    html,
    body {
      height: 100vh;
      width: 100%;
    }

    #main {
      height: 100%;
      width: 100%;
      display: flex;
    }

    #left {
      height: 95.8%;
      width: 20%;
      padding: 1rem;
      background-color: rgb(72, 72, 72);
    }

    #name {
      font-size: 1rem;
      padding-left: 1rem;
    }

    #topleft {
      height: 3.5rem;
      width: 100%;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    #userprofile {
      display: flex;
      align-items: center;
      height: 3.5rem;
      min-width: 9rem;
      /* padding-left: 0.5rem; */
      border-top-right-radius: 1rem;
      border-bottom-right-radius: 1rem;
      border-top-left-radius: 2rem;
      border-bottom-left-radius: 2rem;
    }

    #friendprofile {
      display: flex;
      align-items: center;
      height: 3.5rem;
      min-width: 9rem;
      padding-left: 0.3rem;
      border-top-right-radius: 1rem;
      border-bottom-right-radius: 1rem;
      border-top-left-radius: 2rem;
      border-bottom-left-radius: 2rem;
      background-color: rgb(40, 40, 40);
      margin-bottom: 0.5rem;
    }

    #allfriends {
      margin-top: 1.5rem;

    }

    h2 {
      margin-top: 2rem;
      margin-bottom: 1rem;
    }

    #image {
      height: 3rem;
      width: 3rem;
      border-radius: 50%;
      overflow: hidden;
      object-fit: cover;
    }

    #right {
      height: 100%;
      width: 80%;
      display: flex;
      flex-direction: column;
      overflow: hidden;
      background-color: rgb(196, 196, 196);
      /* display: none; */
    }

    #topright {
      width: 100%;
      height: 5.5rem;
      background-color: rgb(43, 43, 43);
      overflow: hidden;
      padding-left: 1rem;
    }

    #clickeduser {

      height: 100%;
      width: 100%;
      display: flex;
      align-items: center;
    }

    #conversationArea {
      width: 100%;
      height: 40rem;
      /* padding: 1rem; */
      background-color: rgb(196, 196, 196);
    }

    #conversationArea #message{
      padding: 0.5rem 0.75rem;
      border-radius: 1rem;
      background-color: #d1d1d1;
      width: fit-content;
    }

    #conversationArea #outgoingMessage {
      margin-left: auto;
    }

    #msgsend {
      height: 3.5rem;
      width: 98.5%;
      margin: 0.2rem;
      background-color: rgb(43, 43, 43);
      border-top-right-radius: 2rem;
      border-bottom-right-radius: 2rem;
      border-top-left-radius: 2rem;
      border-bottom-left-radius: 2rem;
      display: flex;
      padding: 0.3rem;
    }

    input {
      border-top-left-radius: 2rem;
      border-bottom-left-radius: 2rem;
      border-top-right-radius: 1rem;
      border-bottom-right-radius: 1rem;
      width: 95%;
      border: none;
      margin-right: 0.3rem;
      color: rgb(43, 43, 43);
      padding-left: 1rem;
      font-size: 1rem;
      font-weight: 600;
    }

    input::placeholder {
      color: rgb(108, 108, 108);
    }

    #msgsend>button {
      height: 100%;
      width: 5%;
      border-radius: 50%;
      border: none;
      border-top-left-radius: 1rem;
      border-bottom-left-radius: 1rem;
      border-top-right-radius: 2rem;
      border-bottom-right-radius: 2rem;
    }

    #msgsend>button>i {
      color: rgb(43, 43, 43);
    }

    #searchSection {
      height: 100%;
      width: 100%;
      display: flex;
      justify-content: center;
      gap: inherit;
      align-items: center;
      position: absolute;
      transform: translate(-50%, -50%);
      top: 50%;
      left: 50%;
      backdrop-filter: blur(8px);
      background-color: #00000057;
      display: none;
    }

    #searchSection #center {
      height: 70vh;
      width: 30vw;
      background-color: #fff;
      border-radius: 1rem;
      overflow: hidden;
    }

    #center input {
      height: 3rem;
      width: 100%;
      background-color: #efefef;
      border: 1px solid rgb(125, 125, 125);
      /* outline: none; */
      border-top-left-radius: 1rem;
      border-bottom-left-radius: 0rem;
      border-bottom-right-radius: 0rem;
    }

    #center #users {
      display: flex;
      flex-direction: column;
      padding: 0.5rem;

    }

    #center #users #user {
      display: flex;
      align-items: center;
      /* gap: 0.75rem; */
      cursor: pointer;
    }

    #center #users #user img {
      height: 2.5rem;
      width: 2.5rem;
      border-radius: 50%;
    }

    #search button{
      background-color: transparent;
      text-decoration: none;
      border: none;
    }

  </style>

</head>

<body>

  <div id="main">
    <div id="left">



      <div id="topleft">
        <div id="userprofile">
          <img id="image" src="https://i.pinimg.com/564x/3e/b4/f3/3eb4f3440384fd1b4e2870fc8b0ab829.jpg" alt="">
          <p id="name">@<%=loggedInUser.username%>
          </p>
        </div>
        <div id="search">
          <button>
            <i class="ri-user-add-line"></i>
          </button>
        </div>
      </div>

      <h2>Friends</h2>

      <div id="allfriends">

        <% loggedInUser.friends.forEach(friend=> {%>
          <div id="friendprofile">
            <img id="image" src="https://i.pinimg.com/564x/3e/b4/f3/3eb4f3440384fd1b4e2870fc8b0ab829.jpg" alt="">
            <p id="name">@<%=friend.username%>
          </div>
          <%}) %>

      </div>

    </div>

    <div id="right">

      <div id="topright">
        <div id="clickeduser">
          <img id="image" src="https://i.pinimg.com/564x/3e/b4/f3/3eb4f3440384fd1b4e2870fc8b0ab829.jpg" alt="">
          <p id="name">@username</p>
        </div>
      </div>

      <div id="conversationArea">

      </div>

      <div id="msgsend">
        <input type="text" placeholder="Enter Message" class="inputMessage">
        <button>
          <i id="btn" class="ri-send-plane-2-fill"></i>
        </button>
      </div>

      <div id="searchSection">
        <div id="center">
          <input id="serachUserInput" type="text" placeholder="Search a User">
          <div id="user">

          </div>
        </div>
      </div>

    </div>
  </div>


  <script src="/socket.io/socket.io.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.6.7/axios.min.js"
    integrity="sha512-NQfB/bDaB8kaSXF8E77JjhHG5PM6XVRxvHzkZiwl3ddWCEPBa23T76MuWSwAJdMGJnmQqM0VeY9kFszsrBEFrQ=="
    crossorigin="anonymous" referrerpolicy="no-referrer"></script>

  <script>

    var socket = io();

    const username = '<%= loggedInUser.username %>'
    socket.emit('join-server', username)

    let oppositeUser = null

    document.querySelector('#searchUserInput').addEventListener('input', async function(event){
      const data = document.querySelector("#searchUserInput").value

      if(data == "") return 

      const responce = await axios.post('/searchUser',{
        data:data
      })

      document.querySelector('#center #users').innerHTML = ""
      responce.data.forEach(function(searchUser){
        appendSearchUser(searchUser.profileImage, searchUser.username, searchUser._id)
      });

    })

    function appendSearchUser(profileImage, username, id){
      const template = `
      <div onclick="addFriend(event,'${id}','${profileImage}','${username}')" class="user" id="${id}" >
            <img src="${profileImage}" alt="">
            <h3> ${username} </h3>
          </div>`
          document.querySelector('#center #user').innerHTML += template
    }

  </script>

</body>

</html>