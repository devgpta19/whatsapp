<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />
  <title>MiniWhatsApp</title>

  <style>
    * {
      font-family: 'Gilroy';
      padding: 0;
      margin: 0;
      color: aliceblue;
    }

    html,
    body {
      height: 100vh;
      width: 100%;
    }

    #main {
      height: 100%;
      width: 100%;
      display: flex;
    }

    #left {
      height: 100%;
      width: 20%;
      padding: 1rem;
      background-color: rgb(72, 72, 72);
    }

    #name {
      font-size: 1rem;
      padding-left: 1rem;
    }

    #topleft {
      height: 3.5rem;
      width: 100%;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    #userprofile {
      display: flex;
      align-items: center;
      height: 3.5rem;
      min-width: 9rem;
      /* padding-left: 0.5rem; */
      border-top-right-radius: 1rem;
      border-bottom-right-radius: 1rem;
      border-top-left-radius: 2rem;
      border-bottom-left-radius: 2rem;
      /* background-color: rgb(40, 40, 40); */
    }

    #friendprofile {
      display: flex;
      align-items: center;
      height: 3.5rem;
      min-width: 9rem;
      padding-left: 0.3rem;
      border-top-right-radius: 1rem;
      border-bottom-right-radius: 1rem;
      border-top-left-radius: 2rem;
      border-bottom-left-radius: 2rem;
      background-color: rgb(40, 40, 40);
      margin-bottom: 0.5rem;
    }

    #allfriends {
      margin-top: 1.5rem;
    }

    #allfriends>h2 {
      margin-bottom: 1rem;
    }

    #image {
      height: 3rem;
      width: 3rem;
      border-radius: 50%;
      overflow: hidden;
      object-fit: cover;
      background-color: aliceblue;
    }

    #right {
      height: 100%;
      width: 80%;
      padding: 1rem;
    }

    #topright {
      height: 3.5rem;
      width: 100%;
      padding-left: 0.3rem;
      background-color: rgb(43, 43, 43);
      border-top-right-radius: 1rem;
      border-bottom-right-radius: 1rem;
      border-top-left-radius: 2rem;
      border-bottom-left-radius: 2rem;
    }

    #clickeduser {
      height: 100%;
      width: 100%;
      display: flex;
      align-items: center;
    }

    #conversationArea {
      width: 100%;
      height: 38rem;
      margin-top: 1rem;
      background-color: rgb(196, 196, 196);
    }

    #msgsend {
      height: 3.5rem;
      width: 99%;
      margin: 0.2rem;
      padding-left: 0.3rem;
      background-color: rgb(43, 43, 43);
      border-top-right-radius: 2rem;
      border-bottom-right-radius: 2rem;
      border-top-left-radius: 2rem;
      border-bottom-left-radius: 2rem;
      display: flex;
      padding: 0.3rem;
    }

    input {
      border-top-left-radius: 2rem;
      border-bottom-left-radius: 2rem;
      border-top-right-radius: 1rem;
      border-bottom-right-radius: 1rem;
      width: 95%;
      border: none;
      margin-right: 0.3rem;
      color: rgb(43, 43, 43) ;
      padding-left: 1rem;
      font-size: 1rem;
      font-weight: 600;
    }

    input::placeholder {
      color: rgb(108, 108, 108);
    }

    #msgsend > button{
      height: 100%;
      width: 5%;
      border-radius: 50%;
      border: none;
      border-top-left-radius: 1rem;
      border-bottom-left-radius: 1rem;
      border-top-right-radius: 2rem;
      border-bottom-right-radius: 2rem;
    }

    #msgsend > button > i{
      color: rgb(43, 43, 43) ;
    }

  </style>

</head>

<body>

  <div id="main">
    <div id="left">



      <div id="topleft">
        <div id="userprofile">
          <img id="image" src="https://i.pinimg.com/564x/3e/b4/f3/3eb4f3440384fd1b4e2870fc8b0ab829.jpg" alt="">
          <p id="name">@<%=loggedInUser.username%>
          </p>
        </div>
        <div id="search">
          <i class="ri-user-add-line"></i>
        </div>
      </div>

      <div id="allfriends">
        <h2>Friends</h2>
        <div id="friendprofile">
          <img id="image" src="https://i.pinimg.com/564x/3e/b4/f3/3eb4f3440384fd1b4e2870fc8b0ab829.jpg" alt="">
          <p id="name">@username</p>
        </div>
        <div id="friendprofile">
          <img id="image" src="https://i.pinimg.com/564x/3e/b4/f3/3eb4f3440384fd1b4e2870fc8b0ab829.jpg" alt="">
          <p id="name">@username</p>
        </div>
        <div id="friendprofile">
          <img id="image" src="https://i.pinimg.com/564x/3e/b4/f3/3eb4f3440384fd1b4e2870fc8b0ab829.jpg" alt="">
          <p id="name">@username</p>
        </div>
        <div id="friendprofile">
          <img id="image" src="https://i.pinimg.com/564x/3e/b4/f3/3eb4f3440384fd1b4e2870fc8b0ab829.jpg" alt="">
          <p id="name">@username</p>
        </div>
      </div>


      <!-- <% loggedInUser.friends.forEach(friend=> {%>
          <div id="userprofile">
            <img id="image" src="https://i.pinimg.com/564x/3e/b4/f3/3eb4f3440384fd1b4e2870fc8b0ab829.jpg" alt="">
            <p id="name">@<%=friend.username%>
          </div>
        <%}) %> -->

    </div>
    <div id="right">

      <div id="topright">
        <div id="clickeduser">
          <img id="image" src="https://i.pinimg.com/564x/3e/b4/f3/3eb4f3440384fd1b4e2870fc8b0ab829.jpg" alt="">
          <p id="name">@username</p>
        </div>
      </div>

      <div id="conversationArea">

      </div>

      <div id="msgsend">
        <input type="text" placeholder="Enter Message" class="inputMessage">
        <button>
          <i id="btn" class="ri-send-plane-2-fill"></i>
        </button>
      </div>

    </div>
  </div>

</body>

</html>